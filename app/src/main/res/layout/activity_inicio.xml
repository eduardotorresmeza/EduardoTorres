<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Inicio"
    android:id="@+id/fondo_inicio"
    android:background="@drawable/fondo_inicio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/ancla"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoAnimado"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="250dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/btn_inicio"
        android:layout_below="@+id/logoAnimado"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_iniciar"
        android:background="@null"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:clickable="false"
        android:nestedScrollingEnabled="false"
        android:visibility="visible" />

</RelativeLayout>
